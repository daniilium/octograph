{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Aliasing */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Temp */
    "noImplicitAny": true
  },
  "include": ["src", "routes/login/$token.tsx", "routes/index.tsx", "routes/__root.tsx", "routes/logout/index.tsx", "routes/page/$pageId.tsx", "routes/pages/index.tsx", "routes/profile/index.tsx", "routes/signup/index.tsx", "routes/token/index.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
